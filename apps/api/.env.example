# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/thermal_gait_db

# Security & Authentication
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Admin User Configuration
FIRST_ADMIN_EMAIL=admin@yourdomain.com
FIRST_ADMIN_PASSWORD=change-this-password

# File Upload Configuration
MAX_FILE_SIZE_MB=100
UPLOAD_BASE_DIR=uploads

# ML Model Configuration
ML_MODEL_THRESHOLD=0.179
ML_CONFIDENCE_DEFAULT=0.75
ML_CLAHE_CLIP=2.5
ML_CLAHE_GRID=8

# ML Model Performance Metrics
ML_MODEL_AUC=0.881
ML_MODEL_RECALL=1.0
ML_MODEL_PRECISION=0.8
ML_AVERAGE_PROCESSING_TIME=2.3s

# Processing Configuration
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
PROCESSING_TIMEOUT_SECONDS=300

# Development Settings
DEBUG=false
LOG_LEVEL=INFO

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# OAuth Configuration - Google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/oauth/google/callback

# OAuth Configuration - GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Frontend OAuth Redirect
FRONTEND_OAUTH_REDIRECT_URL=http://localhost:3000/auth/oauth/callback
